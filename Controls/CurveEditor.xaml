<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CurveEditor.Controls">


    <Style TargetType="{x:Type local:CurveEditor}">
        <Setter Property="Background" Value="#808080"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="210"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CurveEditor}">
                    <StackPanel Background="{TemplateBinding Background}">
                        <local:CurveEditorCanvas x:Name="__CurveEditorCanvas__" Width="200" Height="200"/>
                        <Grid>
                            <TextBlock Margin="2,0,0,0" FontSize="8" VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="0.0"/>
                            <TextBlock Margin="0,0,2,0" FontSize="8" VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="1.0"/>
                        </Grid>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
