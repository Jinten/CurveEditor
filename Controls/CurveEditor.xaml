<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CurveEditor.Controls">

    <Style TargetType="{x:Type local:CurveEditor}">
        <Setter Property="Background" Value="#606060"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CurveEditor}">
                    <Border Width="100" Height="20" Background="WhiteSmoke">
                        <TextBlock Text="Curve value" TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
