<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CurveEditor.Controls">


    <Style TargetType="{x:Type local:CurveEditor}">
        <Setter Property="Background" Value="#808080"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CurveEditor}">
                    <Grid Background="{TemplateBinding Background}" Width="350" Height="320">
                        <StackPanel VerticalAlignment="Center">
                            <local:CurveEditorCanvas Grid.Row="0" x:Name="__CurveEditorCanvas__" Width="200" Height="200"/>
                            <DockPanel Grid.Row="1" Width="200" Margin="0,8,0,0" VerticalAlignment="Top">
                                <TextBlock Margin="2,0,0,0" FontSize="8" VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="0.0"/>
                                <TextBlock Margin="0,0,2,0" FontSize="8" VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="1.0"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
